generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  name     String
  password String
  role     Role
  id       String @id @default(uuid())
}

model RealState {
  name           String  @db.VarChar(100)
  description    String  @db.LongText
  bedroomNumber  Int
  bathroomNumber Int
  parkingSpace   Int
  area           Int
  city           String
  district       String
  street         String
  number         String
  rentValue      Float?
  purchaseValue  Float?
  swimmingpool   Boolean @default(false)
  condominium    Boolean @default(false)
  id             String  @id @default(uuid())
  Image          Image[]
}

enum Role {
  costumer
  admin
}

model Image {
  id          String    @id @default(uuid())
  cloudId     String
  url         String
  realState   RealState @relation(fields: [realStateId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  realStateId String

  @@index([realStateId])
}
